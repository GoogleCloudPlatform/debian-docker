# See cloudbuild.yaml.in for the meaning of the variables
# ${TEST_SUITE} is the Go test file you want to run.
steps:
        - name: gcr.io/cloud-builders/go
          args:
                - 'test'
                - '-c'
                - '${TEST_SUITE}'
                - '-o'
                - '/workspace/tests.test'
          env:
                - 'PROJECT_ROOT=tests'
        - name: ${REPO}/debian${VERSION_NUMBER}:${TAG}
          args:
                - '/workspace/tests.test'
